#include <stdlib.h>

/**
 * alloc_grid - returns a pointer to a 2 dimensional array
 * @width: int
 * @height: int
 * Return: 2 pointer to int
 */
int **alloc_grid(int width, int height)
{
	int **arr;
	int i, j;

	for (i = 0; i < height; i++)
	{
		for (j = 0; j < height; j++)
		{
			arr[i][j] = 0;
		}
	}

	return (arr);
}
